            print("Terminating.....")
            break
        else:
            pyttsx3.speak("Wrong input, Say options to view menu")
            print('dont support')

        pyttsx3.speak("You can say quit or exit whenever the work is done")

    else:
        if ("exit" in p) or ("quit" in p):
            print("Terminating.....")
